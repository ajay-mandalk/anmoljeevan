---
import Container from "@/components/shared/Container.astro";

const backgroundImages = [
  "./asset/about-1.png",
  "./asset/about-2.png",
  "./asset/about-3.png",
];
---

<section class="relative min-h-[750px] bg-body overflow-hidden">
  {/* Background images */}
  {
    backgroundImages.map((img, index) => (
      <img
        src={img}
        alt={`Background drone image ${index + 1}`}
        class={`object-cover absolute inset-0 size-full brightness-[0.85] dark:opacity-50 opacity-25 transition-opacity duration-1000 slide-image`}
        loading={index === 0 ? "eager" : "lazy"}
      />
    ))
  }

  <Container>
    <div class="relative z-10 flex flex-col items-center text-center pt-32 pb-20">
      {/* Main Heading with decorative elements */}
      <div class="relative">

        <h1 class="text-6xl font-bold text-gray-900 dark:text-white mb-4">
          Anmol Jeevan Foundation
        </h1>
        <div class="w-24 h-1 bg-[#00ff00] mx-auto mt-4 mb-6"></div>
      </div>

      {/* Description with enhanced styling */}
      <p class="mt-6 text-lg font-light text-gray-800 dark:text-gray-200 max-w-3xl mx-auto leading-relaxed">
        अनमोल जीवन फाउंडेशन एक गैर-लाभकारी संगठन है जो प्रदान करता है
        नशीली दवाओं और शराब की लत के लिए उपचार और पुनर्वास सेवाएँ।
      </p>


        
        <a 
          href="#about" 
          class="mt-20 text-gray-800 dark:text-gray-200 hover:text-[#00ff00] transition-colors duration-300 flex items-center gap-2"
        >
          Learn More
          <svg 
            class="w-4 h-4" 
            viewBox="0 0 24 24" 
            fill="none" 
            stroke="currentColor"
          >
            <path 
              d="M19 9l-7 7-7-7" 
              stroke-width="2" 
              stroke-linecap="round" 
              stroke-linejoin="round"
            />
          </svg>
        </a>
      </div>
    </div>
  </Container>
</section>

<style>
  @keyframes slideShow {
    0% {
      opacity: 0;
    }
    5% {
      opacity: 0.7;
    }
    45% {
      opacity: 0.7;
    }
    50% {
      opacity: 0;
    }
    100% {
      opacity: 0;
    }
  }

  .slide-image {
    opacity: 0;
    animation: slideShow 15s infinite;
  }

  .slide-image:nth-child(2) {
    animation-delay: 5s;
  }

  .slide-image:nth-child(3) {
    animation-delay: 10s;
  }

  /* Add smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }
</style>