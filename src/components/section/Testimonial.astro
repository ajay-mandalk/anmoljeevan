---

<section class="relative py-2">
  <div class="container mx-auto px-4 mb-2">
    
    <!-- First Marquee -->
    <Marquee className="[--duration:24s]" pauseOnHover={true} client:load>
      {
        firstRow.map((testimonial) => (
        <div
            class="relative w-80 mx-2 overflow-hidden rounded-xl border-lime-500 p-6 cursor-pointer
                      border bg-gray-950/[.01] hover:bg-gray-950/[.05]
                      dark:border-lime-500 dark:bg-gray-50/[.10] dark:hover:bg-gray-50/[.15]"
          >
            <div class="flex flex-col gap-3">
              <div class="flex items-center gap-2">
                <img class="rounded-full" width="32" height="32" alt="" src={testimonial.img} />
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                  {testimonial.username}
                </h3>
              </div>
              <p class="font-bold text-gray-600 dark:text-gray-300">
                {testimonial.body}
              </p>
            </div>
          </div>
        ))
      }
    </Marquee>

    <!-- Second Marquee (Reverse Direction) -->
    <Marquee
      className="[--duration:24s]"
      pauseOnHover={true}
      reverse={true}
      client:load
    >
      {
        secondRow.map((testimonial) => (
          <div
            class="relative w-80 mx-2 overflow-hidden rounded-xl border-lime-500 p-6 cursor-pointer
                      border bg-gray-950/[.01] hover:bg-gray-950/[.05]
                      dark:border-lime-500 dark:bg-gray-50/[.10] dark:hover:bg-gray-50/[.15]"
          >
